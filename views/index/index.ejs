                <h4 class="card-title"><%= category.CategoryName %></h4>
                <p class="card-text"><%= category.CategoryDescription %></p>
                
            </div>
            <div class="card-footer">
                <a href="/CategoryDisplay/<%= category.Cat_Id %>" class="btn btn-outline-success">See More</a>
